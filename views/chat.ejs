<%- include("../views/partials/bar.ejs",{ title: "Chat", css: "chat.css" }) %>

<main>
    <section class="chat shadow">
        <section class="friends">
            <div class="searchChat">
                <label for="searchChat"><i class="fi fi-rr-search"></i></label>
                <input class="text sm textPrimary" type="text" id="searchChat" placeholder="Buscar chat...">
            </div>
            <div class="chatProfiles">
                <% if (initChatProfile) { %>
                    <button class="chatProfile">
                        <div>
                            <div>
                                <img class="shadow" src="/images/profiles/<%= initChatProfile.picture %>">
                            </div>
                            <div>
                                <span class="chatName"><%= initChatProfile.name %> <%= initChatProfile.lastname %></span>
                                <span>Ultimo mensaje...</span>
                            </div>
                        </div>
                        <div class="deleteChat">
                            <span><i class="fi fi-sr-trash-xmark"></i></span>
                        </div>
                    </button>
                <% } %>
            </div>
        </section>

        <section class="conversation">
            <div class="messages">
                <span class="sender">Burbuja</span>
                <span class="receiver">Burbuja</span>
            </div>
            <div class="newMsg">
                <input class="text sm textLight" type="text" placeholder="Mensaje...">
                <button class="btn sm btnDark2"><i class="fi fi-rr-paper-plane"></i></button>
            </div>
        </section>
    </section>
</main>