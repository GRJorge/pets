<div class="pub shadow">
    <div class="profile">
        <a href="/user/profile/<%= publication.user._id %>">
            <img src="/images/profiles/<%= publication.user.picture %>" alt="">
            <span><%= publication.user.name %> <%= publication.user.lastname %></span>
        </a>
        <div>
            <span>
                <% const date = new Date() %>
                <% if (publication.createdAt.getDate() == date.getDate() && publication.createdAt.getMonth() == date.getMonth() && publication.createdAt.getFullYear() == date.getFullYear()) { %>
                    <% const hours = publication.createdAt.getHours().toString().padStart(2,"0") %>
                    <% const minutes = publication.createdAt.getMinutes().toString().padStart(2,"0") %>
                    
                    <%= hours %>:<%= minutes %> %>    
                <% } else { %>
                    <% const day = publication.createdAt.getDate().toString().padStart(2,"0") %>
                    <% const month = publication.createdAt.getMonth().toString().padStart(2,"0") %>
                    
                    <%= day %>/<%= month %>/<%= publication.createdAt.getFullYear() %>    
                <% } %>
            </span>
        <% if (!self) { %>
            <button class="btn sm btnDark2">Seguir</button>
        <% } %>
        </div>
    </div>
    <div class="content">
        <p><%- publication.description.replace(/\r\n/g, '<br>') %></p>
        <% if (publication.multimedia.length > 1) { %>
            <div class="gallery">
                <% for( let i = 0; i < publication.multimedia.length; i++ ) { %>
                    <img id="pubImg" num="<%= i %>" src="/images/publications/<%= publication.multimedia[i] %>">
                <% } %>
            </div>
        <% } else if(publication.multimedia.length == 1) { %>
            <img id="pubImg" num="0" src="/images/publications/<%= publication.multimedia[0] %>">
        <% } %>
    </div>
    <div class="reactions">
        <div>
            <button><i class="fi fi-rr-heart"></i><span>100</span></button>
            <button><i class="fi fi-rr-comment-alt"></i><span>100</span></button>
        </div>
        <div>
            <button><i class="fi fi-rr-menu-dots"></i></button>
        </div>
    </div>
</div>